#!/usr/bin/env python3
"""
Readwise BASB CLI - Entry point script.

This script wraps the main CLI to ensure proper path handling.
"""

import sys
from pathlib import Path

# Add src to path for development mode
basb_root = Path(__file__).parent.parent
src_path = basb_root / "src"
sys.path.insert(0, str(src_path))

from readwise_basb.cli import main

if __name__ == "__main__":
    main()
